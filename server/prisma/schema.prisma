generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  userId String @id @default(cuid())
  email String @unique 
  password String
  username String
  yearOfPassingOut Int
  avatar String @default("Doodle")
  courseId String
  xHandle String?
  linkedIn String?
  createdAt DateTime @default(now())
  course_branch   Course  @relation(fields: [courseId], references: [courseId])
}

model Course{
  courseId String @id
  courseName String
  branchName String
  user User[]
}